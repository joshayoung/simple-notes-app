<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SimpleNotes.ViewModels;assembly=SimpleNotes.ViewModels"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#E9EEEC"
             x:Class="SimpleNotes.Pages.AddNotePage">
    <ContentPage.Content>
    <StackLayout Padding="10" x:DataType="viewModels:NoteViewModel">
        <Label Text="Add Note" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" FontSize="30" />
        <Editor Placeholder="Add new note..." Text="{Binding Description}" VerticalOptions="CenterAndExpand" />
        <Button Text="Save" Clicked="SaveNote" BackgroundColor="#3DA87D" TextColor="#ffffff" />
    </StackLayout>
    </ContentPage.Content>
</ContentPage>